<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/base.css">
    <link rel="stylesheet" href="/stylesheets/register.css">
    <script type="text/javascript" src="/javascripts/jquery-3.1.1.min.js"></script>
</head>
<body>
<% include header.ejs %>
<div class="login w">
    <div class="login-tel">
        <span>登录</span>
    </div>
    <div class="login-wt clearfix">
        <div class="login-form fl">
            <div class="tips">
                <span>请登录后在浏览</span>
            </div>
            <div class="login-input">
                <form action="/doreg">
                    <div class="name">
                        <span>用户名：*</span>
                        <input type="text" name="username" id="user">
                        <b id="hi"></b>
                    </div>
                    <div class="name">
                        <span>密码：*</span>
                        <input type="password" name="pwd">
                    </div>
                    <div class="name">
                        <span> 确认密码：*</span>
                        <input type="password">
                    </div>
                    <!--<div class="name">-->
                        <!--<span>电子邮箱：*</span>-->
                        <!--<input type="email">-->
                    <!--</div>-->
                    <!--<div class="name">-->
                        <!--<span>QQ：*</span>-->
                        <!--<input type="password">-->
                    <!--</div>-->
                    <div class="name sj">
                        <input type="submit" value="同意以下协议并注册" class="subl">
                    </div>
                </form>
            </div>
        </div>
        <div class="right-tips fr">
            <span>还没有账号？</span>
            <button>免费注册</button>
        </div>
    </div>
</div>
<% include footer.ejs %>
<script src="./javascripts/jquery-3.1.1.min.js"></script>
<script type="text/javascript">
    $(function(){

        $("#user").keyup(function(){
            var name=$("#user").val();
            $.ajax({
                url:"/regtest",
                type:'get',
                data:{kk:name},
                async:true,
                dataType:'json',
                success:function(data){
                    if(data=="1"){
                        $("#hi").text("该用户名已经注册")
                    }else {
                        $("#hi").text("")
                    }
                }
            })
        })
    })
</script>
</body>
</html>